<%= render 'shared/error', obj:@user %>
<div class="row">
  <div class="col-sm-12">
    <%=form_for( @user,:html=>{class: "form-horizontal", role:'form'}, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :username %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :username,class:"form-control",placeholder:"Enter the username",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field  :email,class:"form-control",placeholder:"Enter the email",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-8">
          <%= form.password_field  :password,class:"form-control",placeholder:"Enter the password",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= form.submit(@user.new_record? ? "Sign Up ": "Update Account",class:"btn btn-primary btn-lg") %>
        </div>
      </div>
    <%end %>
  </div>
</div>
<%=link_to 'back to articles', articles_path %>