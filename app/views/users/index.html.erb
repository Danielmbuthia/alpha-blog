<h2 align="center">Alpha Bloggers</h2>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="card col-md-4 offset-3 ">
        <li><%=link_to user.username,user_path(user) %></li>
        <li><small><%=pluralize(user.articles.count, 'article') if user.articles %></small></li>
        <% if current_user.admin? %>
          <li>
           <%= link_to 'delete this user',user_path(user),method: :delete,
           data: 
           {confirm: "Are you sure you want to delete this user with his articles?"},
           class: "btn btn-danger"
           %>
          </li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>