<%= render 'shared/error', obj:@article %>
<div class="row">
  <div class="col-sm-12">
    <%=form_for( @article,:html=>{class: "form-horizontal", role:'form'}, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title,class:"form-control",placeholder:"Enter the title",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area  :description,row:10,class:"form-control",placeholder:"Enter the description",autofocus:true %>
        </div>
      </div>

      <p>
        <%= form.submit %>
      </p>
    <%end %>
  </div>
</div>
<%=link_to 'back to articles', articles_path %>