<h1>Create a new category</h1>
<%= render 'shared/error', obj:@category %>
<div class="row">
  <div class="col-sm-12">
    <%=form_for( @category,:html=>{class: "form-horizontal", role:'form'}, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :name,class:"form-control",placeholder:"Enter category name",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= form.submit %>
        </div>
      </div>
    <%end %>
  </div>
</div>