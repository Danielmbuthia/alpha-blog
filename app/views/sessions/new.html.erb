<h1 align="center">Sign In </h1>
<div class="row">
  <div class="col-sm-12">
    <%=form_for( :session,:html=>{class: "form-horizontal", role:'form'}, local: true,url:login_path) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field  :email,class:"form-control",placeholder:"Enter the email",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-8">
          <%= form.password_field  :password,class:"form-control",placeholder:"Enter the password",autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= form.submit 'Sign In',class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <%end %>
  </div>
</div>
<%=link_to 'back to articles', articles_path %> | <%= link_to 'Sign up ', signup_path%>